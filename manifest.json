{
	"manifest_version": 2,
	"name": "Feedly Counter",
	"description": "Shows unread article count from Feedly",
	"version": "1.3.4",
	"options_page": "options.html",
	"icons": {
		"128": "images/icon128.png",
		"48": "images/icon48.png"
	},
	"permissions": [
		"tabs", "webRequest", "alarms", "notifications", "https://feedly.com/*"
	],
	"browser_action": {
		"default_popup": "popup.html"
	},
	"background": {
		"persistent": true,
		"scripts": ["scripts/background.js"]
	},
	"content_scripts": [
		{
			"matches": ["http://localhost/?code=*"],
			"js": ["scripts/hook.js"]
		}
	]
}
